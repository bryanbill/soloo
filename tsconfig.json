{
  "compilerOptions": {
    "outDir": "build",
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "module": "commonjs",
    "target": "es2019",
    "rootDir": "src",
    "lib": ["es2019", "dom"]
  },
  "include": ["src/**/*.ts"]
}
