{
  "compilerOptions": {
    "declaration": true,
    "outDir": "build",
    "strict": false,
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipDefaultLibCheck": true
  },
  "extends": "./tsconfig.json",
  "include": ["src/**/*.ts"],
  "exclude": ["src/e2e/*.ts", "src/**/*.spec.ts", "src/e2e.ts", "src/test.ts"]
}
